@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Access Denied</h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                    </div>
                    <h4>You don't have permission to access this resource.</h4>
                    <p class="lead">This action requires administrator privileges.</p>
                    <p>If you believe you should have access to this resource, please contact the system administrator.</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-3">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Login as Different User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
