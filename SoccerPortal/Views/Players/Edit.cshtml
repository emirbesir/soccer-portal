@model SoccerPortal.Models.Player

@{
    ViewData["Title"] = "Edit Player";
}

<div class="container mt-4">
    <h1>Edit Player</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4>Player Information</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PlayerID" />
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="TeamID" class="control-label">Team</label>
                            <select asp-for="TeamID" class="form-control" asp-items="ViewBag.Teams"></select>
                            <span asp-validation-for="TeamID" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Position" class="control-label">Position</label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Age" class="control-label">Age</label>
                            <input asp-for="Age" class="form-control" type="number" min="16" max="50" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="GoalsScored" class="control-label">Goals Scored</label>
                            <input asp-for="GoalsScored" class="form-control" type="number" min="0" />
                            <span asp-validation-for="GoalsScored" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mt-4">
                            <input type="submit" value="Save" class="btn btn-warning" />
                            <a asp-action="Details" asp-route-id="@Model.PlayerID" class="btn btn-info">Back to Details</a>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4>Statistics</h4>
                </div>
                <div class="card-body">
                    <p>You can update the player's statistics:</p>
                    <ul>
                        <li>Update the team if the player has transferred</li>
                        <li>Change the position if needed</li>
                        <li>Update goals scored after matches</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
