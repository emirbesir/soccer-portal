@model SoccerPortal.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2>Delete Player</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4>Are you sure you want to delete this player?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5>Player Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Team</dt>
                        <dd class="col-sm-9">@Model.Team.TeamName</dd>

                        <dt class="col-sm-3">Position</dt>
                        <dd class="col-sm-9">@Model.Position</dd>

                        <dt class="col-sm-3">Age</dt>
                        <dd class="col-sm-9">@(Model.Age.HasValue ? Model.Age.Value.ToString() : "Not specified")</dd>

                        <dt class="col-sm-3">Goals Scored</dt>
                        <dd class="col-sm-9">@Model.GoalsScored</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="PlayerID" />
                <div class="form-group mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Details" asp-route-id="@Model.PlayerID" class="btn btn-secondary">Cancel</a>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
