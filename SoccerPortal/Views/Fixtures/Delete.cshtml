@model SoccerPortal.Models.Fixture

@{
    ViewData["Title"] = "Delete Fixture";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2>Delete Fixture</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4>Are you sure you want to delete this fixture?</h4>
                <p>This action cannot be undone. Deleting the fixture will not delete the associated match.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5>Fixture Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Match</dt>
                        <dd class="col-sm-9">
                            @Model.Match.Team1.TeamName vs @Model.Match.Team2.TeamName
                        </dd>

                        <dt class="col-sm-3">Fixture Date</dt>
                        <dd class="col-sm-9">@Model.FixtureDate.ToString("MMMM d, yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Venue</dt>
                        <dd class="col-sm-9">@Model.Match.Venue.VenueName</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == "Completed" ? "badge-success" : 
                                                Model.Status == "Postponed" ? "badge-danger" : 
                                                Model.Status == "In Progress" ? "badge-warning" : 
                                                "badge-primary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="FixtureID" />
                <div class="form-group mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Details" asp-route-id="@Model.FixtureID" class="btn btn-secondary">Cancel</a>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
